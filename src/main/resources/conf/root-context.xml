<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	 http://www.springframework.org/schema/context
                         http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<import resource="mongo-config.xml" />
	<context:component-scan base-package="com.iexsoft.service" />
	<context:component-scan base-package="com.iexsoft.controller" />
	
    <context:property-placeholder  location="classpath:/conf/venus.properties" ignore-unresolvable="true" />
    <context:property-placeholder  location="classpath:/conf/messages.properties" ignore-unresolvable="true" />
   
   
	<bean class="org.springframework.context.support.ResourceBundleMessageSource"
		id="messageSource">
		<property name="basename" value="messages" />
	</bean>
</beans>
